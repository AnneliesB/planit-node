doctype html
html
  head
    meta(charset='UTF-8')
    link(rel='stylesheet', href='https://planit-develmode.herokuapp.com/stylesheets/dist/css/normalize.css')
    link(rel='stylesheet', href='https://planit-develmode.herokuapp.com/stylesheets/dist/css/app.css')
    link(rel='shortcut icon' href='https://planit-develmode.herokuapp.com/images/logo.ico')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700&display=swap' rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Domine:400,700&display=swap' rel='stylesheet')
    title Planit
  body.planner
  nav.planner__navigation
    a(href="/").planner__navigation--link
      img(src='https://planit-develmode.herokuapp.com/images/logo.svg').planner__navigation--logo
    ion-icon.planner__navigation--menu(name='menu')
  
  .planner__navigation--popup
    .planner__navigation--popup--container
      p.planner__navigation--popup--planner Planner
      //p.planner__navigation--popup--lists Lists
      p.planner__navigation--popup--logout Logout

  .planner__datepicker
    ion-icon.planner__datepicker--arrow.planner__datepicker--arrowLeft(name='arrow-dropleft')
    p.planner__datepicker--currentDate This week
    ion-icon.planner__datepicker--arrow.planner__datepicker--arrowRight(name='arrow-dropright')

  .planner__week--container
    .planner__week
      
      
  script(type='module' src='https://unpkg.com/ionicons@4.5.10-0/dist/ionicons/ionicons.esm.js')
  script(nomodule='' src='https://unpkg.com/ionicons@4.5.10-0/dist/ionicons/ionicons.js')
  script(src="/javascripts/config.js")
  script(src="/javascripts/global.js")
  script(src="/javascripts/loadDays.js")
  script(src="/javascripts/changeTodoStatus.js")
  script(src="/javascripts/addTodo.js")
  script(src="/javascripts/deleteTodo.js")
  script(src="/javascripts/navigation.js")